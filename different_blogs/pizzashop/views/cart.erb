<h2>your cart </h2>


<div id="cart">
    <table class="table table-striped">
    	<thead>	
    	  <tr>
    	    <th>Пицца</th>
    	    <th>Цена</th>
    	    <th>Количество</th>
    	  </tr>
     	</thead>
     	<tbody>
     		<% total_price = 0 %>
     		<% total_count = 0 %>
     		<% @items.each do |item| %>
     		<tr>
     			<td><%= item[0].title %></td>
     			<td><%= item[0].price %></td>
     			<td><%= item[1] %></td>
     		</tr>
     		<% total_price += item[0].price * item[1].to_i %>
     		<% total_count += item[1].to_i%>
     		<%end%>
     		<tr>
     			<td></td>
     			<td><%= total_price %></td> 
     			<td><%= total_count %></td>
     		</tr>
     		
     	</tbody>
    </table>



    <form action="/place_order" method="post">
    	<input type="hidden" name="order[order]" value="<%= @orders_input%>"/>

    	<div class="form-group">
       	 	<label >Ваше имя: </label>
        	<input type="text" class="form-control"  placeholder="Введите Ваше имя" name="order[name]" value="<%= @c.name %>" >
      	</div>

      	<div class="form-group">
       	 	<label >Контактный телефон </label>
        	<input type="text" class="form-control"  placeholder="Введите Ваш телефон" name="order[phone]" value="<%= @c.phone %>" >
      	</div>

      	<div class="form-group">
       	 	<label >Адрес доставки </label>
        	<textarea type="text" class="form-control"  placeholder="Введите Ваш адресс" name="order[adress]" value="<%= @c.adress %>"></textarea>
      	</div>

      	<button type="submit" class="btn btn-success">Сделать заказ</button>
        <button  class="btn btn-danger"onclick="return cancel_order()">Отменить заказ</button>
    </form>
</div>